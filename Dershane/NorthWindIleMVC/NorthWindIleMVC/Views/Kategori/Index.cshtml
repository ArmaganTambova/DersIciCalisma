@model IEnumerable<NorthWindIleMVC.Models.Categories>
@{
    ViewBag.Title = "Kategori Listele";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="PageTitle">
    <h1>Kategoriler</h1>
    <a href="@Url.Action("Create", "Kategori")" class="PageTitleUrl">Kategori Ekle</a>
</div>

<div class="FormContainer">
    <table class="FormTable" cellpadding="0" cellspacing="0">
        <tr>
            <th>ID</th>
            <th>İsim</th>
            <th>Açıklama</th>
            <th>Seçenekler</th>
        </tr>
        @foreach (NorthWindIleMVC.Models.Categories Item in Model)
        {
            <tr>
                <td>@Item.CategoryID</td>
                <td>@Item.CategoryName</td>
                <td>@Item.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "Kategori", new {Id = Item.CategoryID})" class="TableButton Duzenle">Düzenle</a>
                    <a href="@Url.Action("Delete", "Kategori", new {Id = Item.CategoryID})" class="TableButton Sil">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>

@section styles{
    <link href="~/Assets/CSS/FormStyle.css" rel="stylesheet" />
}
